		//Swiper
		var swiper = new Swiper('.content1', {
			spaceBetween: 30,
			centeredSlides: true,
			autoplay: {
				delay: 3500,
				disableOnInteraction: false,
			},
			pagination: {
				el: '.swiper1',
				clickable: true,
			},
			navigation: {
				nextEl: '.swiper-button-next',
				prevEl: '.swiper-button-prev',
			},
		});

		//
		//		var window_height = $(window).height();
		//		$(".swiper-wrapper").css("height",window_height+'px');
		//动画
		var wow = new WOW({
			boxClass: 'wow',
			animateClass: 'animated',
			offset: 0,
			mobile: true,
			live: true	
		});
		wow.init();

		var swiper = new Swiper('.content', {
			slidesPerView: 6,
			spaceBetween: 30,
			slidesPerGroup: 2,
			loop: true,
			loopFillGroupWithBlank: true,
			autoplay: {
				delay: 2500,
				disableOnInteraction: false,
			},
			pagination: {
				el: '',
				clickable: true,
			},
			navigation: {
				nextEl: '.swiper-button-next1',
				prevEl: '.swiper-button-prev1',
			},
		});

		//计数
		$(function() {
			$("#count1").numberRock({
				lastNumber: 1000,
				duration: 5000,
				easing: 'swing', //慢快慢
			});
			$("#count2").numberRock({
				lastNumber: 200,
				duration: 5000,
				easing: 'swing', //慢快慢
			});
			$("#count3").numberRock({
				lastNumber: 100,
				duration: 5000,
				easing: 'swing', //慢快慢
			});
			$("#count4").numberRock({
				lastNumber: 10,
				duration: 5000,
				easing: 'swing', //慢快慢
			});
		});
